HYDRA_VERSION=v0.11.14
# currently generated using https://github.com/euank/openapi-generator/commit/ea41745bf1ffe7b7a5fc702b14ff9e9e86e60da8

generate: ./hydra-$(HYDRA_VERSION).swagger.json
ifndef SWAGGER_CLI
	$(error "SWAGGER_CLI must be set to the path of swagger-codegen-cli.jar")
endif
	java -jar "$(SWAGGER_CLI)" generate -l rust -i ./hydra-$(HYDRA_VERSION).swagger.json -DpackageName=hydra_client -DpackageVersion=0.1.0 -o .

./hydra-$(HYDRA_VERSION).swagger.json:
	curl -o ./hydra-$(HYDRA_VERSION).swagger.json https://raw.githubusercontent.com/ory/hydra/$(HYDRA_VERSION)/docs/api.swagger.json
	# the health status api isn't correctly generated by the rust openapi
	# codegen, see https://github.com/OpenAPITools/openapi-generator/issues/524
	# Until then, just delete it because we don't really need it anyways.
	jq '.paths |= del(."/health/status")' ./hydra-$(HYDRA_VERSION).swagger.json > ./hydra-$(HYDRA_VERSION).swagger.json.tmp
	mv ./hydra-$(HYDRA_VERSION).swagger.json.tmp ./hydra-$(HYDRA_VERSION).swagger.json
